# ===========================================
# Hotel Booking Payments Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control!
# ===========================================

# -----------------------------
# Database Configuration
# -----------------------------
# For Docker: Server=sqlserver,1433
# For local development: Server=(localdb)\mssqllocaldb
MSSQL_SA_PASSWORD=YourStrong@Passw0rd
ConnectionStrings__HotelBookingDatabase=Server=sqlserver,1433;Database=HotelBooking;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;

# -----------------------------
# JWT Authentication
# -----------------------------
# IMPORTANT: Must match Users Service JWT settings
# Generate new key: openssl rand -base64 64
Jwt__SecretKey=YOUR_JWT_SECRET_KEY_HERE_BASE64_64_BYTES
Jwt__Issuer=HotelBooking
Jwt__Audience=HotelBookingUsers
Jwt__ExpirationMinutes=60

# -----------------------------
# Encryption (for sensitive data)
# -----------------------------
# Generate new key: openssl rand -base64 32
# Generate new IV: openssl rand -base64 16
Encryption__Key=YOUR_ENCRYPTION_KEY_HERE_BASE64_32_BYTES
Encryption__IV=YOUR_ENCRYPTION_IV_HERE_BASE64_16_BYTES

# -----------------------------
# Stripe Payment Configuration
# -----------------------------
# Get keys from: https://dashboard.stripe.com/test/apikeys
# Use sk_test_ and pk_test_ prefixed keys for development
Stripe__SecretKey=sk_test_YOUR_STRIPE_SECRET_KEY
Stripe__PublishableKey=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
Stripe__WebhookSecret=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# -----------------------------
# API Keys for Inter-Service Communication
# -----------------------------
# Current service API key (this service identifies itself with this key)
# Generate: openssl rand -base64 32
ApiKeys__Current=YOUR_PAYMENTS_SERVICE_API_KEY

# Other services API keys (for validating incoming requests)
ApiKeys__Services__UsersService=USERS_SERVICE_API_KEY
ApiKeys__Services__HotelsService=HOTELS_SERVICE_API_KEY
ApiKeys__Services__ReservationsService=RESERVATIONS_SERVICE_API_KEY
ApiKeys__Services__PaymentsService=YOUR_PAYMENTS_SERVICE_API_KEY

# -----------------------------
# Service URLs (Docker network names)
# -----------------------------
# In Docker: use service names from docker-compose
# Locally: use localhost with appropriate ports
ServiceUrls__Reservations=http://reservations-service:8080
ServiceUrls__Hotels=http://hotels-service:8080
ServiceUrls__Payments=http://payments-service:8080
ServiceUrls__Users=http://users-service:8080

# -----------------------------
# Logging Configuration
# -----------------------------
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__Microsoft.EntityFrameworkCore=Warning

# -----------------------------
# ASP.NET Core Configuration
# -----------------------------
ASPNETCORE_ENVIRONMENT=Development
